{% extends 'base.html.twig' %}

{% block title %}CRFM - Planning{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('planning-edit') }}
{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('planning-edit') }}
{% endblock %}
{% block body %}
    {% include "navbar.html.twig" %}

    <div class="container">
        {% if id is defined %}
            <h1><strong>Modifier</strong> la disponiblité numéro n°<strong>{{ id }}</strong></h1>
            {% if app.user.admin and user is defined %}
                <h4>Disponiblité de <strong>{{ user.formattedName }}</strong></h4>
            {% endif %}
        {% else %}
            <h1><strong>Ajouter</strong> une <strong>nouvelle</strong> disponibilité</h1>
        {% endif %}
        {{ form(form) }}
        {% if delete %}
            <a class="btn btn-outline-danger btn-delete" href="{{ path('planning_delete', {'id': id}) }}">Supprimer</a>
        {% endif %}
    </div>


{% endblock %}
