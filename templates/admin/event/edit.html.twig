{% extends 'base.html.twig' %}

{% block title %}CRFM - Planning{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('planning-edit') }}
{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('planning-edit') }}
{% endblock %}
{% block body %}
    {% include "navbar.html.twig" %}

    <div class="container">
        {% if id is defined %}
            <h1><strong>Modifier</strong> l'évenement numéro n°<strong>{{ id }}</strong></h1>
        {% else %}
            <h1><strong>Ajouter</strong> un <strong>nouvel</strong> évenement</h1>
        {% endif %}
        {% if user is defined %}
            <h4>Créé par <strong>{{ user.displayName }}</strong></h4>
        {% endif %}
        {{ form(form) }}
        {% if delete %}
            <a class="btn btn-outline-danger btn-delete"
               href="{{ path('admin_event_delete', {'id': id}) }}">Supprimer</a>
        {% endif %}

        {% if availabilities is defined %}
            <br/>
            <h3>Disponibilités liées</h3>

            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Utilisateur</th>
                    <th scope="col">Debut</th>
                    <th scope="col">Fin</th>
                    <th scope="col">Etat</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for availability in availabilities %}
                    <tr>
                        <td>{{ availability.id }}</td>
                        <td>{{ availability.user.displayName }}</td>
                        <td>{{ availability.start.format(constant("App\\Controller\\PlanningController::SHOW_FORMAT")) }}</td>
                        <td>{{ availability.stop.format(constant("App\\Controller\\PlanningController::SHOW_FORMAT")) }}</td>
                        <td>{% if availability.state == constant('App\\Entity\\Availability::STATE_UNKNOWN') %} Inconnu
                            {% elseif availability.state == constant('App\\Entity\\Availability::STATE_MOD_WAITING') %} Attente de vérification de la modification
                            {% elseif availability.state == constant('App\\Entity\\Availability::STATE_VALIDATE') %} Validé
                            {% elseif availability.state == constant('App\\Entity\\Availability::STATE_WAITING') %} Attente de vérification
                            {% endif %}
                        </td>
                        <td>
                            {% if availability.state == constant('App\\Entity\\Availability::STATE_VALIDATE') %}
                                <a href="{{ path('admin_availability_validate', {"id": availability.id, "validation": "true"}) }}">Valider</a>
                            {% endif %}
                            <a class="btn btn-outline-danger"
                               href="{{ path('admin_availability_validate', {"id": availability.id, "validation": "false"}) }}">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>


{% endblock %}
