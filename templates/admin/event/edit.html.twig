{% extends 'base.html.twig' %}

{% block title %}CRFM - Planning{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('planning-edit') }}
{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('planning-edit') }}
{% endblock %}
{% block body %}
    {% include "navbar.html.twig" %}

    <div class="container">
        {% if id is defined %}
            <h1><strong>Modifier</strong> l'évenement numéro n°<strong>{{ id }}</strong></h1>
        {% else %}
            <h1><strong>Ajouter</strong> un <strong>nouvel</strong> évenement</h1>
        {% endif %}
        {% if user is defined %}
            <h4>Créé par <strong>{{ user.displayName }}</strong></h4>
        {% endif %}
        {{ form(form) }}
        {% if delete %}
            <a class="btn btn-outline-danger btn-delete"
               href="{{ path('admin_event_delete', {'id': id}) }}">Supprimer</a>
        {% endif %}

    </div>


{% endblock %}
