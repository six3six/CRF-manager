{% extends 'base.html.twig' %}

{% block title %}Profil - {{ user.formattedName }}{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('admin-user') }}
{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('admin-user') }}
{% endblock %}

{% block body %}
    {% include "navbar.html.twig" %}
    <div class="container">
        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}
        <h1 class="h3 mb-3 font-weight-normal">Modification du profil</h1>
        <h4>{{ user.formattedName }} ({{ user.username }})</h4>
        <input type="hidden" id="user_id" value="{{ user.id }}">
        <form method="post" action="">
            <div class="form-group">
                <label for="inputFirst_name">Prénom</label>
                <input type="text" value="{{ user.firstName }}" name="first_name" id="inputFirst_name"
                       class="form-control" required>
            </div>
            <div class="form-group">
                <label for="inputLast_name">Nom de famille</label>
                <input type="text" value="{{ user.lastname }}" name="last_name" id="inputLast_name" class="form-control"
                       required>
            </div>

            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="text" value="{{ user.email }}" name="email" id="inputEmail" class="form-control"
                       required>
            </div>
            <div class="form-group">
                <label for="inputCellphone">Téléphone portable</label>
                <input type="text" value="{{ user.cellphone }}" name="cellphone" id="inputCellphone"
                       class="form-control">
            </div>

            <div class="form-group">
                <label for="inputPhone">Téléphone fixe</label>
                <input type="text" value="{{ user.phone }}" name="phone" id="inputPhone" class="form-control">
            </div>
            <div class="form-group">
                <label for="inputAddress">Addresse</label>
                <textarea class="form-control" name="address" id="inputAddress">{{ user.address }}</textarea>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="is_admin"
                       id="inputAdmin" {% if user.admin %} checked {% endif %}>
                <label class="form-check-label" for="inputAdmin">
                    Administrateur
                </label>
            </div>
            <br/>
            <button class="btn btn-primary" type="submit">
                Changer les informations
            </button>
            <div id="calendar"></div>
        </form>
    </div>
{% endblock %}
