{% extends 'base.html.twig' %}

{% block title %}CRFM - Planning{% endblock %}
{% block body %}
    {% include "navbar.html.twig" %}

    <div class="container">
        {% if id is defined %}
            <h1><strong>Modifier</strong> la compétence numéro n°<strong>{{ id }}</strong></h1>
        {% else %}
            <h1><strong>Ajouter</strong> une <strong>nouvelle</strong> compétence</h1>
        {% endif %}
        {{ form(form) }}
        {% if delete %}
            <a class="btn btn-outline-danger btn-delete"
               href="{{ path('admin_skill_delete', {'id': id}) }}">Supprimer</a>
        {% endif %}
    </div>


{% endblock %}
