{% extends 'base.html.twig' %}

{% block title %}CRFM - Planning{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('planning-insert') }}
{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('planning-insert') }}
{% endblock %}
{% block body %}
    {% include "navbar.html.twig" %}

    <div class="container">
        <form method="post" href="{{ path('admin_skill_insert') }}">
            {% if error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}
            <h1 class="h3 mb-3 font-weight-normal"><strong>Ajouter</strong> une <strong>nouvelle</strong> comp√©tence
            </h1>
            <div class="form-group">
                <label for="av_name">Nom</label>
                <input type="text" name="name" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="av_start">Description</label>
                <textarea class="form-control" name="description" required></textarea>
            </div>
            <a class="btn btn-danger" href="{{ path('admin_skill_list') }}">Annuler</a>
            <button class="btn btn-primary" type="submit">
                Valider
            </button>
        </form>
    </div>

{% endblock %}
